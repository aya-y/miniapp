<div class="row">
    <div class="col s12 m6">
      <div class="card amber lighten-3">
        <div class="card-content black-text">
          <span class="card-title"><%= simple_format(tweet.text) %></span>
          <p><%= simple_format(tweet.name) %></p>
        </div>
      <% if user_signed_in? && current_user.id == tweet.user_id %>
        <div class="card-action">
          <a href="#"><%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get %></a>
          <a href="#"><%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %></a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
